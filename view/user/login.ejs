<%- include('../layout/userLayouts/header.ejs') %>
<%- include('../layout/userLayouts/nav.ejs') %>

  <!-- Head End -->

  <!-- Body Start -->
  <body>
    <!-- Loader Start -->
     <div class="loader-wrapper">
      <div class="loader animate">
        <span>K</span>
        <span>e</span>
        <span>V</span>
        <span>o</span>
        <span>C</span>
      </div>
    </div>
    <!-- Loader End -->

    <!-- Main Start -->
    <div class="main">
      <section class="page-body p-0">
        <div class="row g-0 ratio_asos">
          <div class="order-2 order-lg-1 col-lg-5">
            <div class="content-box">
              <div>
                <h5>LOGIN <span class="bg-theme-blue"></span></h5>
                <p class="font-md content-color">How do i get access order,wishlist and recomendation ?</p>

                <form action="/login" class="custom-form form-pill"  method="post" >
                  <div class="input-box">
                    <label for="email">Email</label>
                    <input class="form-control" type="email" required name="email" id="email">
                  </div>

                  <div class="input-box">
                    <label for="password">Password</label>
                    <div class="icon-input">
                      <input class="form-control" type="password" required name="password" id="password">
                      <img class="showHidePassword" src="/userAssets/icons/svg/eye-1.svg" alt="eye">
                    </div>
                  </div>
                  <%
                  if(typeof message !== 'undefined'){
                      %>

                             <%= message %>

                      <%
                  }

              %>

                  <a class="forgot-link" href="/forgotPassword">Forgot Password?</a>

                  <button type="submit" class="btn-solid rounded-pill line-none">Signin <i class="arrow"></i></button>
                  <a href="/" class="btn-solid rounded-pill line-none btn-outline mt-3 d-flex justify-content-center">Home <i class="arrow"></i></a>
                </form>

                <span class="backto-link font-default content-color text-decoration-none">If you are new, <a class="text-decoration-underline theme-color" href="/registration"> Create Now </a> </span>
                <span class="line"><span>Or </span> </span>
                <div class="link-group">
                  <a href="https://www.google.com/" class="button-link"><img src="/userAssets/icons/png/google.png" alt="google"> Sign in </a>
                  <a href="https://www.facebook.com/" class="button-link"><img src="/userAssets/icons/png/fb.png" alt="facebook"> Sign in </a>
                </div>
              </div>
            </div>
          </div>

          <div class="order-1 order-lg-2 col-lg-7">
            <div class="img-box">
              <img class="bg-img" src="/userAssets/images/inner-page/banner.jpg" alt="banner">
            </div>
          </div>
        </div>
      </section>
    </div>
    <!-- Main End -->

    <%- include('../layout/userLayouts/footer.ejs') %>